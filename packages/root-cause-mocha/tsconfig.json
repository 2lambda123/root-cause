{
  "compilerOptions": {
    "target": "ES2018",
    "module": "commonjs",
    // "lib": ["ES2018"],
    "lib": ["ES2018", "DOM"],
    "removeComments": true,
    "outDir": "./dist",
    "rootDir": "./src",
    "isolatedModules": true,
    "strict": true,
    "types": ["node", "mocha"],
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true
  },
  "include": ["src"]
}
